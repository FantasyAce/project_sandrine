{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block body %}
<div class="container">

  <h1 class="font-weight-light text-center mt-4 mb-0">Galerie Photo</h1>

  <hr class="mt-2 mb-5">

  <div class="row text-center text-lg-left">

    {% for image in galleryImages %}
    <div class="col-lg-3 col-md-4 col-6">
      <a href="{{asset('asset/images/' ~ image.image)}}" class="d-block mb-5 h-100">
            <img class="img-fluid img-thumbnail" id="photo_gallery" src="{{asset('asset/images/' ~ image.image)}}" alt="">
          </a>
    </div>
    {% endfor %}
   
</body>
{% endblock %}
